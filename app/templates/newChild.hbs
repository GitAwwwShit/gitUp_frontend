  <div class="ui-179 activity cGoal" data-childID-for-cGoal={{../id}} data-RemoveGoal={{id}}>
    <div class="container">

        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12 col-mob" id="{{id}}">
      <!-- Item Starts -->
      <div class="ui-item activity">

        <!-- User Details Starts -->
        <div class="ui-user clearfix">
          <!-- User Image -->
          <div class="pull-left">
            <a href="#"><img src="{{activities_img activity_id}}" alt="" class="img-responsive" /></a>
            <!-- UserName And Designation -->
            <h2><a href="#">{{../first_name}}: {{activities_name activity_id}}</a></h2>
          </div>
        </div>
