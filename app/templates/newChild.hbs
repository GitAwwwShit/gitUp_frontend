                <div class="uis-item">
                  <!-- Heading -->
                  <h4>Goal</h4>
                  <!-- Progress -->
                  <div class="progress" data-progressInsert2={{id}}>
                    <!-- Progress Bar -->
                    <div class="progress-bar {{../colors}}" data-progressUpdate2={{id}} role="progressbar" aria-valuenow="{{entry_amount_sum}}" aria-valuemin="0" aria-valuemax="{{goal_amount}}" style="width: {{goal_percent}}%;"></div>
