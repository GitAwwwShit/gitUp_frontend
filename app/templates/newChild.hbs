  <!-- UI - 179 Add New Goal Starts -->
  <div class="ui-179 new-goal">
    <div class="container">

        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12 col-mob">
      <!-- Item Starts -->
      <div class="ui-item new-goal">
        <!-- Heading -->
        <a href="#" class="ui-heading clearfix">
          <!-- Left -->
          <div class="update-activity-reward">
            <h4>Add New Goal <i class="fa fa-angle-down"></i></h4>
          </div>
        </a>
        <!-- Details -->
        <div class="ui-details">

  						<!-- Add New Goal Form -->
  						<div class="ui-form">
  							<form>
  								<!-- Select the Activity -->
                  <div class="form-group">

                    <!-- UI X -->
                  		<div class="ui-42">

                  			<div class="container">

                  				<div class="row">

                  					<div class="col-md-6">
                  						<!-- Drop down menu -->
                              <div class="form-group">
                               <label for="activitySelect">Select an Activity</label>
                               <select data-childID-activity="{{id}}" class="form-control activitySelect">
                               </select>
                              </div>
                  					</div>
                  				</div>
                  			</div>
                  		</div>


  								</div>
                  <!-- Reward -->
                  <div>
                    <div class="radio btn-group">
    									<label>
    										<input type="radio" name="g1" value="minutes" checked> Record in Minutes &nbsp;
    									</label>
                      <label>
    										<input type="radio" name="g1" value="amount"> Record by Amount
    									</label>
    								</div>
                  </div>
                  <!-- record time/amount -->
  								<div class="form-group">
  									<input type="reward" class="form-control" data-gAmount="{{id}}" placeholder="Time to Goal? Reps to Goal?">
  								</div>
  								<!-- Reward -->
                  <!-- Select the Activity -->
                  <div class="form-group">
                    <input type="reward" class="form-control" data-gReward="{{id}}" placeholder="Enter the Reward">
                  </div>

  								<!-- Button -->
  								<button type="submit" data-childID-for-cGoal="{{id}}" class="btn btn-block btn-green add-cGoal">Add Goal</button>
  							</form>

      </div>
      <!-- Item Ends -->
    </div>
