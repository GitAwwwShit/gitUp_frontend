<div class="ui-179 activity cGoal" data-childID-for-cGoal={{child_id}} data-RemoveGoal={{id}}>
  <div class="container">

      <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12 col-mob" id="{{id}}">
    <!-- Item Starts -->
    <div class="ui-item activity">

      <!-- User Details Starts -->
      <div class="ui-user clearfix">
        <!-- User Image -->
        <div class="pull-left">
          <a href="#"><img src="{{activities_img activity_id}}" alt="" class="img-responsive" /></a>
          <!-- UserName And Designation -->
          <h2><a href="#">{{child_FN}}: {{activities_name activity_id}}</a></h2>
        </div>
      </div>
      <!-- User Details Ends -->

      <!-- update button -->
      <a href="#" class="ui-heading clearfix update">
        <div class="update-activity pull-right">
          update <i class="fa fa-angle-down"></i>
        </div>
      </a>
      <!-- Details -->
      <div class="ui-details">

            <!-- Add New Goal Form -->
            <div class="ui-form">
              <form>
                <!-- Goal -->
                <div class="form-group">

                  <!-- UI X -->
                    <div class="ui-42">

                      <div class="container">

                        <div class="row">

                          <div class="col-md-6">

                          </div>
                        </div>
                      </div>
                    </div>


                </div>

                <!-- record time/amount -->
                <div class="form-group">
                  <input type="reward" class="form-control update-goal" data-cGoalIDupdate="{{id}}" placeholder="Enter Amount">
                </div>

                <!-- Button -->
                <button type="submit" class="btn btn-red remove-goal" data-cGoalIDremove="{{id}}">Delete</button>
              </form>
            </div>
    </div>

    <!-- Item Ends -->

    <!-- Skills Starts -->
    <div class="ui-81">
      <div class="ui-item">
        <div class="ui-skills">
          <div class="row">
            <div class="col-md-10 col-sm-10 col-xs-10 col-mob">
              <!-- Item -->
              <div class="uis-item">
                <!-- Heading -->
                <h4>Goal</h4>
                <!-- Progress -->
                <div class="progress" data-progressInsert2={{id}}>
                  <!-- Progress Bar -->
                  <div class="progress-bar {{../colors}}" data-progressUpdate2={{id}} role="progressbar" aria-valuenow="{{entry_amount_sum}}" aria-valuemin="0" aria-valuemax="{{goal_amount}}" style="width: {{goal_percent}}%;"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Badges Starts -->
        <div class="ui-social">
          <!-- Heading -->
          <h4>Badges</h4>
          <div class="badge">
            <img class="badge" src="/img/badge/goldTrophy.ai" alt="gold trophy">
            <img class="badge" src="/img/badges/purple.ai" alt="gold trophy">
            <img class="badge" src="/img/badges/silverMedal.ai" alt="gold trophy">
          </div>
        </div>
        <!-- Badges Ends -->
      </div>
    </div>


  </div>


</div>

</div>
</div>
</div>
